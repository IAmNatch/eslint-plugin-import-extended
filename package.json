{
    "name": "eslint-plugin-import-extended",
    "version": "1.0.0",
    "description": "Extended set of import related ESLint rules.",
    "scripts": {
        "clean": "rm -rf ./dist/",
        "build:ci": "run build",
        "build": "run clean && mkdir -p ./dist && tsc --project tsconfig.build.json",
        "lint": "eslint -c .eslintrc.js --ext .ts './src/**/*.ts' './tests/**/*.ts' --no-error-on-unmatched-pattern",
        "test": "NODE_OPTIONS=\"--max-old-space-size=8192\" run jest --runInBand --color --reporters=default --no-cache --coverage=false --silent=false",
        "pre-commit": "lint-staged",
        "prettier": "prettier --write src/*",
        "bootstrap": "husky install",
        "release": "semantic-release",
        "semantic-release": "semantic-release"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "homepage": "https://github.com/IAmNatch/eslint-plugin-import-extended",
    "repository": {
        "type": "git",
        "url": "https://github.com/IAmNatch/eslint-plugin-import-extended.git"
    },
    "engines": {
        "node": ">=14"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "author": {
        "name": "iAmNatch"
    },
    "main": "dist/index.js",
    "types": "index.d.ts",
    "dependencies": {
        "@types/is-core-module": "^2.2.0",
        "@typescript-eslint/scope-manager": "5.27.1 ",
        "@typescript-eslint/utils": "5.27.1",
        "eslint-module-utils": "^2.7.3",
        "is-core-module": "^2.9.0",
        "minimatch": "^5.1.0",
        "reflect-metadata": "0.1.13"
    },
    "devDependencies": {
        "@commitlint/cli": "17.0.3",
        "@commitlint/config-conventional": "17.0.3",
        "@semantic-release/changelog": "6.0.1",
        "@semantic-release/exec": "6.0.3",
        "@types/eslint": "8.4.5",
        "@types/jest": "27.5.2",
        "@types/minimatch": "3.0.5",
        "@types/node": "17.0.45",
        "@typescript-eslint/eslint-plugin": " 5.27.1",
        "@typescript-eslint/parser": "5.27.1",
        "class-validator": "0.13.2",
        "eslint": "8.21.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsdoc": "39.3.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "husky": "8.0.1",
        "jest": "28.1.2",
        "jest-create-mock-instance": "2.0.0",
        "jest-junit": "13.2.0",
        "lint-staged": "12.5.0",
        "prettier": "2.7.1",
        "semantic-release": "19.0.3",
        "ts-jest": "28.0.7",
        "typescript": "4.6.4"
    },
    "peerDependencies": {
        "@typescript-eslint/parser": "^5.0.0",
        "class-validator": "*",
        "eslint": "^8.0.0"
    },
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin",
        "linter",
        "lint",
        "style"
    ],
    "license": "MIT",
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{ts,js,css,md}": "prettier --write"
    },
    "packageManager": "yarn@3.2.1"
}
